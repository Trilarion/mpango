<?xml version="1.0"?>

<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_1.dtd" >

<faces-config>

	<application>
<!-- 		<view-handler>com.sun.facelets.FaceletViewHandler</view-handler> -->
		<variable-resolver>org.springframework.web.jsf.DelegatingVariableResolver</variable-resolver>     
        <locale-config>            
            <default-locale>en</default-locale>            
        </locale-config>
        <message-bundle>MessageBundle</message-bundle>
        <default-render-kit-id>org.apache.myfaces.trinidad.core</default-render-kit-id>
	</application>

	<!-- navigation rules for helloWorld.jsp -->
	<navigation-rule>
		<from-view-id>/helloWorld.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/directory/success.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>


	<!-- navigation rules for helloWorld.jsp -->
	<navigation-rule>
		<from-view-id>/helloWorld.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>failure</from-outcome>
			<to-view-id>/directory/failure.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<!-- navigation rules for page2.jsp -->
	<navigation-rule>
		<navigation-case>
			<from-outcome>back</from-outcome>
			<to-view-id>/helloWorld.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
</faces-config>